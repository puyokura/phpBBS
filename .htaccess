<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip if file exists
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rewrite /foo -> /foo.php
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^\.]+)$ $1.php [L]
    
    # Fallback to index if needed (optional, but clean URLs suffice with above)
</IfModule>